# Configuration de l'application
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=votre-cle-secrete-a-changer
JWT_SECRET_KEY=votre-jwt-secret-a-changer

# Base de données
DATABASE_URL=postgresql://user:password@localhost:5432/agriculture_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=votre-email@example.com
MAIL_PASSWORD=votre-mot-de-passe
MAIL_DEFAULT_SENDER=noreply@agriculture-platform.com

# Stripe (Paiement)
STRIPE_PUBLIC_KEY=pk_test_votre_cle_publique
STRIPE_SECRET_KEY=sk_test_votre_cle_secrete
STRIPE_WEBHOOK_SECRET=whsec_votre_webhook_secret

# AWS S3 (Stockage médias)
AWS_ACCESS_KEY_ID=votre_access_key
AWS_SECRET_ACCESS_KEY=votre_secret_key
AWS_S3_BUCKET=votre-bucket-name
AWS_REGION=eu-west-1

# Newsletter (Mailchimp/Sendinblue)
MAILCHIMP_API_KEY=votre_api_key
MAILCHIMP_LIST_ID=votre_list_id

# SMS (Twilio)
TWILIO_ACCOUNT_SID=votre_account_sid
TWILIO_AUTH_TOKEN=votre_auth_token
TWILIO_PHONE_NUMBER=+33600000000

# Configuration serveur
UPLOAD_FOLDER=app/static/uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Pagination
ITEMS_PER_PAGE=20

# Cache
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/1
CACHE_DEFAULT_TIMEOUT=300
